
import random
def dice_sim():
    while(True):
        flag=int(input('do you want to play?? if yes press 1 and if no press 0 \n'))
        if flag==1:
             number=random.randint(1,6)
             print("you got the number",number)
        else:
            print('thank you for playing')
            break
        
dice_sim()

   





